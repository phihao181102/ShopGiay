<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopGiay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/MyStyle.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="gif">
                    <img src="https://i.pinimg.com/originals/2d/dc/d1/2ddcd1bc121aa17552c4450671076f3c.jpg" style="height:4rem" />
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Cửa Hàng</a>
                        </li>
                    </ul>
                </div>
            </div>
            <form asp-controller="Giays" asp-action="Index" method="get" class="col-2 my-1 p-2">
                <div>
                    <div class="my-1">
                        <input type="text" name="searchString" placeholder="Tìm kiếm..." class="form-control-sm col-12" />
                    </div>
                    <input type="submit" value="Tìm kiếm" class="btn btn-primary btn-sm" />
                </div>
            </form>
            <a class="nav-link text-dark text-right btn-warning" asp-area="" asp-controller="Cart" asp-action="Index" style="margin-left:2rem; margin-right:2rem;border-radius:5px;"><i class="fa-solid fa-cart-shopping"></i></a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Sneaker</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
